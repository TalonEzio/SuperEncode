<Window
    x:Class="SuperEncode.Wpf.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="840"
    Height="480"
    MinWidth="840"
    MinHeight="480"
    MaxWidth="840"
    MaxHeight="480"
    FontSize="20"
    mc:Ignorable="d">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Name="RowFunction" Height="Auto" />
            <RowDefinition Name="RowIo" Height="Auto" />
        </Grid.RowDefinitions>

        <Grid
            Name="RowInput"
            Grid.Row="0"
            Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400" />
                <ColumnDefinition Width="400" />
            </Grid.ColumnDefinitions>

            <Border
                Grid.Column="0"
                Margin="5"
                Padding="5"
                BorderBrush="Black"
                BorderThickness="1">
                <StackPanel>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Tên font" />
                        <TextBox
                            Name="TxtFontName"
                            Grid.Column="1"
                            TextChanged="TxtFontName_OnTextChanged" />
                    </Grid>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Font" />
                        <ComboBox
                            Name="CmbFont"
                            Grid.Column="1"
                            SelectionChanged="CmbFont_OnSelectionChanged">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock FontFamily="{Binding}" Text="{Binding Converter={StaticResource FontFamilyNameConverter}}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Grid>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Loại Font" />

                        <ComboBox
                            Name="CmbFontType"
                            Grid.Column="1"
                            d:DataContext="{d:DesignInstance Typeface}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        FontFamily="{Binding Path=FontFamily}"
                                        FontStyle="{Binding Path=Style}"
                                        FontWeight="{Binding Path=Weight}"
                                        Text="{Binding Converter={StaticResource FontTypeViewConverter}}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                    </Grid>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Kích cỡ font" />
                        <TextBox Grid.Column="1" Text="20" />
                    </Grid>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Max-bitrate" />
                        <TextBox Grid.Column="1" Text="12000" />
                    </Grid>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Outline" />
                        <TextBox Grid.Column="1" Text="0.75" />
                    </Grid>
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Website" />
                        <TextBox Grid.Column="1" Text="animew.org" />
                    </Grid>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Margin="0,0,5,0"
                            VerticalAlignment="Center"
                            Text="Marquee" />
                        <TextBox
                            Grid.Column="1"
                            Height="120"
                            Text="Phim cập nhật lúc 23:00 thứ ba hàng tuần tại ANIMEW.ORG.                             Chúc các bạn xem phim vui vẻ!"
                            TextWrapping="Wrap" />
                    </Grid>

                </StackPanel>
            </Border>

            <Border
                Grid.Column="1"
                Margin="5"
                BorderBrush="Black"
                BorderThickness="1">

                <StackPanel Margin="5">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <CheckBox Name="CkbOverrideSub" Margin="0,0,0,5">Ghi đè phụ đề</CheckBox>
                        <CheckBox
                            Name="CkbHdr"
                            Grid.Column="1"
                            Margin="0,0,0,5">
                            Bật HDR
                        </CheckBox>
                    </Grid>

                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <CheckBox Name="CkbCmd" Margin="0,0,0,5">Bật Cmd</CheckBox>
                        <CheckBox
                            Name="CkbDeleteAfterDone"
                            Grid.Column="1"
                            Margin="0,0,0,5">
                            Xoá sau khi xong
                        </CheckBox>
                    </Grid>

                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Button
                            Name="BtnSelectPath"
                            Grid.Column="0"
                            Height="31"
                            Margin="5,5,5,0"
                            VerticalAlignment="Top"
                            Click="BtnSelectPath_Click"
                            Content="Chọn đường dẫn" />
                        <Button
                            Name="BtnOpenFolder"
                            Grid.Column="1"
                            Margin="5"
                            Content="Mở thư mục" />

                    </Grid>

                    <TextBlock Text="Đường dẫn thư mục:" />
                    <Border
                        Margin="5"
                        BorderBrush="Black"
                        BorderThickness="1">
                        <TextBlock Name="TxtPath" TextWrapping="Wrap" />
                    </Border>

                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Số file tìm được: " />
                        <TextBlock
                            Name="TxtFileCount"
                            Grid.Column="1"
                            Text="0" />

                    </Grid>

                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Button
                            Name="BtnRun"
                            Margin="5"
                            Click="BtnRun_OnClick">
                            Chạy
                        </Button>

                        <Button
                            Name="BtnDelete"
                            Grid.Column="1"
                            Margin="5"
                            Click="BtnDelete_OnClick">
                            Xoá
                        </Button>
                    </Grid>

                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Margin="0,0,10,0">
                            Trạng thái
                        </TextBlock>
                        <ProgressBar Name="PbStatus" Grid.Column="1" />
                    </Grid>

                </StackPanel>
            </Border>

        </Grid>

        <!--<Grid Grid.Row="1">
            <ScrollViewer>
                <DataGrid
                    Name="DgvFiles"
                    Height="200"
                    Margin="15" />
            </ScrollViewer>
        </Grid>-->
    </Grid>
</Window>
