<Window
    x:Class="SuperEncode.Wpf.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:SuperEncode.Wpf.ViewModels"
    Title="Encode Anime Tool"
    Width="840"
    Height="520"
    MinWidth="840"
    d:DataContext="{d:DesignInstance viewModel:MainViewModel}"
    Closing="MainWindow_OnClosing"
    FontSize="20"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid IsEnabled="{Binding EnableWindow}">

        <Grid.RowDefinitions>
            <RowDefinition Name="RowFunction" Height="Auto" />
            <RowDefinition Name="RowIo" Height="Auto" />
        </Grid.RowDefinitions>

        <Grid
            Name="RowInput"
            Grid.Row="0"
            Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="400" />
                <ColumnDefinition Width="400" />
            </Grid.ColumnDefinitions>

            <Border
                Grid.Column="0"
                Margin="5"
                Padding="5"
                BorderBrush="Black"
                BorderThickness="1">
                <StackPanel IsEnabled="{Binding SubtitleSetting.OverrideSubtitle}">

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Tên font" />

                        <TextBox
                            Name="TxtFontName"
                            Grid.Column="1"
                            Text="{Binding SubtitleSetting.FontSearchText, Mode=TwoWay}" />
                        <Button
                            Grid.Column="2"
                            Margin="5,0"
                            Padding="10,0"
                            Command="{Binding LoadFontCommand}"
                            CommandParameter="{Binding ElementName=TxtFontName, Path=Text}"
                            Content="Tìm" />
                    </Grid>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Font" />
                        <ComboBox
                            Name="CmbFont"
                            Grid.Column="1"
                            ItemsSource="{Binding FontFamilies}"
                            SelectedItem="{Binding SubtitleSetting.FontFamily, Mode=TwoWay}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock FontFamily="{Binding Converter={StaticResource FontFamilyConverter}}" Text="{Binding Converter={StaticResource FontFamilyNameConverter}}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Grid>
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <CheckBox
                            Grid.Column="0"
                            Content="Đậm"
                            IsChecked="{Binding SubtitleSetting.Bold}" />
                        <CheckBox
                            Grid.Row="0"
                            Grid.Column="1"
                            Content="Nghiêng"
                            IsChecked="{Binding SubtitleSetting.Italic}" />
                        <CheckBox
                            Grid.Row="1"
                            Grid.Column="0"
                            Content="Gạch chân"
                            IsChecked="{Binding SubtitleSetting.Underline}" />
                        <CheckBox
                            Grid.Row="1"
                            Grid.Column="1"
                            Content="Gạch ngang"
                            IsChecked="{Binding SubtitleSetting.Strikeout}" />

                    </Grid>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                    </Grid>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Kích cỡ font" />
                        <TextBox Grid.Column="1" Text="{Binding SubtitleSetting.FontSize}" />
                    </Grid>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Max-bitrate" />
                        <TextBox Grid.Column="1" Text="{Binding SubtitleSetting.MaxBitrate}" />
                    </Grid>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Outline" />
                        <TextBox Grid.Column="1" Text="{Binding SubtitleSetting.OutLine}" />
                    </Grid>
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Website" />
                        <TextBox Grid.Column="1" Text="{Binding SubtitleSetting.Website}" />
                    </Grid>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Margin="0,0,5,0"
                            VerticalAlignment="Center"
                            Text="Marquee" />
                        <TextBox
                            Grid.Column="1"
                            Height="120"
                            Text="{Binding SubtitleSetting.Marquee}"
                            TextWrapping="Wrap" />
                    </Grid>

                </StackPanel>
            </Border>

            <Border
                Grid.Column="1"
                Margin="5"
                BorderBrush="Black"
                BorderThickness="1">

                <StackPanel Margin="5">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <CheckBox
                            Name="CkbOverrideSub"
                            Margin="0,0,0,5"
                            IsChecked="{Binding Path=SubtitleSetting.OverrideSubtitle}">
                            Ghi đè phụ đề
                        </CheckBox>
                        <CheckBox
                            Name="CkbHdr"
                            Grid.Column="1"
                            Margin="0,0,0,5"
                            IsChecked="{Binding Path=VideoSetting.EnableHdr}">
                            Bật HDR
                        </CheckBox>
                    </Grid>

                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <CheckBox
                            Name="CkbCmd"
                            Margin="0,0,0,5"
                            IsChecked="{Binding Path=VideoSetting.EnableCmd}">
                            Bật Cmd
                        </CheckBox>
                        <CheckBox
                            Name="CkbDeleteAfterDone"
                            Grid.Column="1"
                            Margin="0,0,0,5"
                            IsChecked="{Binding Path=VideoSetting.DeleteAfterEncode}">
                            Xoá sau khi xong
                        </CheckBox>
                    </Grid>

                    <Grid Margin="10">

                        <CheckBox Margin="0,0,0,5" IsChecked="{Binding Path=ScanDeep}">
                            Quét toàn bộ folder con
                        </CheckBox>
                    </Grid>

                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Button
                            Name="BtnSelectPath"
                            Grid.Column="0"
                            Height="31"
                            Margin="5,5,5,0"
                            VerticalAlignment="Top"
                            Command="{Binding SelectPathCommand}"
                            Content="Chọn đường dẫn" />
                        <Button
                            Name="BtnOpenFolder"
                            Grid.Column="1"
                            Margin="5"
                            Command="{Binding OpenFolderCommand}"
                            CommandParameter="{Binding VideoSetting.InputFolder}"
                            Content="Mở thư mục" />

                    </Grid>

                    <TextBlock Text="Đường dẫn thư mục:" />
                    <Border
                        Margin="5"
                        BorderBrush="Black"
                        BorderThickness="1">
                        <ScrollViewer>
                            <TextBlock Name="TxtPath" Text="{Binding VideoSetting.InputFolder}" />
                        </ScrollViewer>
                    </Border>

                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Số file tìm được: " />
                        <TextBlock
                            Name="TxtFileCount"
                            Grid.Column="1"
                            Text="{Binding Files.Count}" />

                    </Grid>

                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Button
                            Name="BtnRun"
                            Margin="5"
                            Command="{Binding RunCommand}">
                            Chạy
                        </Button>

                        <Button
                            Name="BtnReset"
                            Grid.Column="1"
                            Margin="5"
                            Command="{Binding ResetCommand}">
                            Xoá
                        </Button>
                    </Grid>

                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <StackPanel Margin="0,0,20,0" Orientation="Horizontal">
                            <TextBlock Text="{Binding SuccessCount}" />
                            <TextBlock>/</TextBlock>
                            <TextBlock Text="{Binding Files.Count}" />

                        </StackPanel>
                        <ProgressBar
                            Name="PbStatus"
                            Grid.Column="1"
                            Maximum="{Binding Files.Count}"
                            Value="{Binding SuccessCount}" />
                        <TextBlock
                            Grid.Column="2"
                            Margin="10,0"
                            Text="{Binding DurationStopwatch}" />
                    </Grid>

                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
